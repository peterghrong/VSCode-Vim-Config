{
    // VIM
    "vim.leader": " ",
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.statusBarColors.easymotioninputmode": "#007ac",
    "vim.normalModeKeyBindingsNonRecursive": [
        // Vim Shortcuts
        {
            "before": [
                "J"
            ],
            "after": [
                "5",
                "j"
            ]
        },
        {
            "before": [
                "K"
            ],
            "after": [
                "5",
                "k"
            ]
        },
        {
            "before": [
                "<Leader>",
                "l"
            ],
            "after": [
                "$"
            ]
        },
        {
            "before": [
                "<Leader>",
                "h"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        // Panes control
        {
            // switch left pane
            "before": [
                "<C-h>"
            ],
            "after": [
                "<C-w>",
                "h"
            ]
        },
        {
            // switch right pane
            "before": [
                "<C-j>"
            ],
            "after": [
                "<C-w>",
                "j"
            ]
        },
        {
            // switch top pane
            "before": [
                "<C-k>"
            ],
            "after": [
                "<C-w>",
                "k"
            ]
        },
        {
            // swtich bottom pane
            "before": [
                "<C-l>"
            ],
            "after": [
                "<C-w>",
                "l"
            ]
        },
        // Sidebar control
        {
            "before": [
                "<Leader>",
                "e"
            ],
            "commands": [
                "workbench.explorer.fileView.focus"
            ]
        }
    ]
}